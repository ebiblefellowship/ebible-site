source 'https://rubygems.org'

gem 'nanoc'
gem 'rake'
gem 'compass'
gem 'sass'
gem 'susy'
gem 'rainpress'
gem 'jsmin'
gem 'kramdown'
gem 'haml'
gem 'builder'

# Server related gems for nanoc view, etc.
group :server do
  gem 'rack'
  gem 'rack-rewrite'
  gem 'adsf'
  gem 'mime-types'
end

# Deployment related gems
group :deploy do
  # required for nanoc deploy using rsync
  gem 'systemu'
end

# Audio related gems including mp3 tagging and deployment
group :audio do
  gem 'ruby-mp3info'
  gem 'fog'
end

